{
  "name": "@riveraser/vue-text-utils",
  "version": "1.0.0",
  "description": "A lightweight Vue 3 plugin offering a collection of custom directives for formatting text directly in your templates.",
  "main": "dist/index.umd.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "lint:check": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --ignore-path .gitignore",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "vue-tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/riveraser/vue-text-utils.git"
  },
  "keywords": [
    "vue",
    "vue3",
    "directives",
    "formatting",
    "currency",
    "numbers",
    "date-time",
    "i18n",
    "internationalization",
    "npm"
  ],
  "author": "Sergio Rivera Morales",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/riveraser/vue-text-utils/issues"
  },
  "homepage": "https://github.com/riveraser/vue-text-utils#readme",
  "peerDependencies": {
    "vue": "^3.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.5.0",
    "eslint": "^8.0.0",
    "eslint-plugin-vue": "^9.0.0",
    "jsdom": "^24.0.0",
    "prettier": "^3.0.0",
    "terser": "^5.44.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0",
    "vue": "^3.4.0",
    "vue-tsc": "^2.0.0"
  }
}
